#!/bin/bash

mdless() {
	if [ -n "$1" ] ; then
		if [ -f "$1" ] ; then
          declare -i COLS     # COLS is an integer
          COLS=`tput cols`-3  # otherwise iTerm's scroll bar obscures 2 columns

			 cat <(echo ".TH $(basename $1) 7 `date --iso-8601` Dr.Markdown") <(pandoc -t man $1) | \
			     groff -rLL=${COLS}n -rcR=1 -K utf8 -t -T utf8 -man 2>/dev/null ;
		fi
	fi
}


htmless() {
	if [ -n "$1" ] ; then
		if [ -f "$1" ] ; then
          declare -i COLS     # COLS is an integer
          COLS=`tput cols`-3  # otherwise iTerm's scroll bar obscures 2 columns

			 cat <(echo ".TH $(basename $1) 7 `date --iso-8601` Dr.HTML") <(pandoc -t man $1) | \
			     groff -rLL=${COLS}n -rcR=1 -K utf8 -t -T utf8 -man 2>/dev/null ;
		fi
	fi
}


case "$1" in
    *.md)
        mdless "$1"
        ;;
    *.html)
        htmless "$1"
        ;;
    *.htm)
        htmless "$1"
        ;;
    *.json)
        jq -C < "$1"
        ;;
    *)
        acat "$1"
        ;;
esac

exit 0

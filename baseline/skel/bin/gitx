#!/usr/bin/perl
#
# Run a git command in all subdirectories of the current subdirectory
#

use List::Util qw(reduce);
use Term::ANSIColor;


sub git {
    my $dir = shift;
    my $args = shift;

    print colored("$dir\n", "bold reverse");
    chdir "$dir";
    print "git $args\n";
    $output = `git $args`;
    $exitcode = $? >> 0;
    print $output;
    if ($exitcode) {
        die "Git exited with error status: $exitcode"
    }
}


@dirs = grep(/\/$/, `ls -F`);
$args = reduce { $a . " " . $b } @ARGV;
$here = `pwd`;
chomp($here);

foreach $dir (@dirs) {
    chomp $dir;
    git("$here/$dir", $args);
}
